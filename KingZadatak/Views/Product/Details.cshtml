@model KingZadatak.Models.ProductDetails

<div class="container">
    <div class="d-flex justify-content-center">
        <h3>@Model.Title</h3>
    </div>
    <div class="d-flex justify-content-center">
        <img src="@Model.Thumbnail" style="width:50%"/>
    </div>
    <div class="d-flex justify-content-center">
        Cijena proizvoda: @Model.Price
    </div>
    <div class="d-flex justify-content-center">
        Opis proizvoda: @Model.Description
    </div>
    <div class="d-flex justify-content-center">
        Brand: @Model.Brand
    </div>
    <div class="d-flex justify-content-center">
        Kategorija: @Model.Category
    </div>
</div>